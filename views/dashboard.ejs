<!doctype html>
<html>
<head><title>Dashboard</title><link rel="stylesheet" href="/style.css"/></head>
<body>
  <div class="container">
    <div class="topbar">
      <div>
        <h2>Expense Tracker</h2>
        <p class="muted">Welcome, <b><%= user.name %></b> | <%= user.email %></p>
      </div>
      <a class="btn danger" href="/logout">Logout</a>
    </div>

    <% if (error) { %><p class="error"><%= error %></p><% } %>

    <div class="grid">
      <div class="card">
        <h3>Total Spent</h3>
        <p class="big">₹ <%= total.toFixed(2) %></p>
      </div>

      <div class="card">
        <h3>Add Expense</h3>
        <form method="POST" action="/expenses/add">
          <input name="title" placeholder="Title (e.g., Lunch)" required />
          <input name="amount" type="number" step="0.01" placeholder="Amount" required />

          <select name="category" required>
            <option value="">Select Category</option>
            <option>Food</option><option>Travel</option><option>Bills</option>
            <option>Shopping</option><option>Education</option><option>Health</option><option>Other</option>
          </select>

          <input name="date" type="date" required />
          <input name="note" placeholder="Note (optional)" />
          <button class="btn" type="submit">Add</button>
        </form>
      </div>
    </div>

    <div class="card">
      <h3>Your Expenses</h3>
      <% if (expenses.length === 0) { %>
        <p class="muted">No expenses yet.</p>
      <% } else { %>
        <table>
          <thead>
            <tr><th>Date</th><th>Title</th><th>Category</th><th>Amount</th><th>Action</th></tr>
          </thead>
          <tbody>
            <% expenses.forEach(e => { %>
              <tr>
                <td><%= new Date(e.date).toISOString().slice(0,10) %></td>
                <td><%= e.title %></td>
                <td><%= e.category %></td>
                <td>₹ <%= e.amount.toFixed(2) %></td>
                <td>
                  <form method="POST" action="/expenses/<%= e._id %>/delete">
                    <button class="btn danger small" type="submit">Delete</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } %>
    </div>
  </div>
</body>
</html>
